  "type": "module",
  "description": "Mock API server for testing Cali Chat Widget",
  "main": "server.js",
  "scripts": {
    "dev": "node --watch server.js",
    "start": "node server.js",
    "build:ncc": "ncc build server.js -o dist/ncc --minify ",
